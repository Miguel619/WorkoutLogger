    ViewData["Title"] = "Home Page";
}

<section id="header-banner" class="jumbotron jumbotron-fluid bg-primary text-white text-center mb-0">
    <div class="container">
        <h1>Welcome to Workout Log</h1>
        <p>Your personal fitness journey starts here!</p>
    </div>
</section>

<section id="get-started" class="container mt-4">
    <h2>Getting Started Today!</h2>
    <p>Ready to embark on your fitness journey? Join us and start tracking your workouts with ease. Your goals, our technology – a perfect match!</p>
</section>

<section id="about-creator" class="container mt-4">
    <h2>About the Creator</h2>
    <p>Hi there, I'm Miguel, the passionate developer behind Workout Log. With a love for fitness and technology, I've created this platform to help you seamlessly track your workouts and achieve your goals.</p>
</section>

